page{
  padding: 0 25rpx;
  box-sizing: border-box;
}
.top-tit{
  color: #333;
  font-size: 50rpx;
  font-weight: bold;
}
.top-con{
  font-size: 28rpx;
  color: #333;
  position: relative;
  margin-left: 36rpx;
}
.tit{
  font-size: 42rpx;
  font-weight: bold;
  color: #333;
  margin: 40rpx 0;
}
.con{
  background: #ffd34e;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.btn-hover{
  background: red
}
.con image{
  width: 308rpx;
  height: 200rpx;
  float: right;
}
.con text{
  float: left;
  line-height: 200rpx;
  color: #333;
  font-size: 36rpx;
  margin-left: 50rpx;
}
.top-con::before{
  content: "";
  position: absolute;
  width: 36rpx;
  height: 36rpx;
  background: url(http://img.chaojibuyers.com:9011/jiaxiao/tubiao.png) no-repeat;
  background-size: 30rpx;
  left: -36rpx;
  top:4rpx;
}