page{
  background: #efefef;
}
.box{
  width: 700rpx;
  background: #fff;
  border-radius: 30rpx;
  margin: 40rpx auto;
  padding: 60rpx 30rpx;
  box-sizing: border-box;
  overflow: hidden;
  font-size: 32rpx;
  height: 200rpx;
}
.box-l{
  float: left;
}
.box-r{
  float: right;
  color: #333;
  font-size: 28rpx;
  border: 1px solid #333;
  border-radius: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  width: 160rpx;
  text-align: center;
}
.box-l-to{
  font-size: 22rpx;
  color: #424242;
  margin-top: 20rpx;
}
.box-l-t{
  font-weight: bold;
  font-size: 30rpx;
}
.tishi{
  color:#424242;
  font-size: 22rpx;
  display: block;
  text-align: center;
  width:100%;
  float:left;
}
.agreement{
  width: 700rpx;
  margin: 30rpx auto;
  font-size: 28rpx;
  line-height: 30rpx;
}
.agreement radio{
  transform:scale(0.6);
  vertical-align: middle;
}
.agreement navigator{
  display: inline-block;
  color: red;
  /* width:470rpx;
  float:right; */
  line-height:44rpx;
}
.statement{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0;
  line-height: 40rpx;
}
.statement-content{
  width: 476rpx;
  margin: 0 auto;
  margin-top: 250rpx;
  border-radius: 10rpx;
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
  color: #000;
  font-size: 26rpx;
}
.statement-btn{
  width: 100%;
  height: 50rpx;
  margin-top: 20rpx;
  text-align: center;
  padding-left: 5%;
}
.statement-btn view{
  float: left;
  width: 40%;
  line-height: 50rpx;
  background: #ffd34e;
  border-radius: 40rpx;
  margin-right: 5%;
}
.statement-btn view:first-of-type{
  background: none;
  border: 1px solid #333;
}
.statement-btn view:last-of-type{
  margin-right: 0;
}