.evaluate{
  background: #f4f4f4;
}
.evaluate-box{
  background: #fff;
  padding: 50rpx 26rpx;
}
.evaluate-num{
  margin: 20rpx 0;
  color: #2b2b2b;
}
.evaluate-num text{
  background: #f4f4f4;
  font-size: 26rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
  padding: 4rpx 20rpx;
}
.evaluate-list{
  border-bottom: 1px  solid #e5e5e5;
  padding: 40rpx 0; 
  box-sizing: border-box;
}
.evaluate-list-img image{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  float: left;
  margin-right: 20rpx;
  margin-top: 10rpx;
}
.evaluate-list-name{
  color: #2b2b2b;
  font-size: 28rpx;
}
.evaluate-list-con{
  margin-top: 30rpx;
  font-size: 26rpx;
}
.huifu{
  background: #f4f4f4;
  margin-top: 30rpx;
  padding: 20rpx;
}
.huifu-name{
  color: #2b2b2b;
  font-size: 26rpx;
  font-weight: bold;
}
.huifu-con{
  font-size: 26rpx;
  color: #676767;
}
.huifu-input{
  margin-top: 20rpx;
}
.huifu-input input{
  background: #fff;
  border: 1px solid #2b2b2b;
  padding-left: 20rpx;
  font-size: 26rpx;
}