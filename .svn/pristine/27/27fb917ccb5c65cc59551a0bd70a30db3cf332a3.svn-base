page{
  background: #f2f2f2;
}
.mine-nav{
  width: 700rpx;
  margin: 30rpx auto;
  height: 64rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}
.mine-nav .mine-tab{
  width: 25%;
  display: inline-block;
  line-height: 64rpx;
  position: relative;
}
.mine-nav .mine-tab.active{
  color: #0195ff;
}
.active::after{
  content: "";
  width: 100rpx;
  height: 4rpx;
  background: #0195ff;
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -50rpx;
}
.list{
  width: 700rpx;
  background: #fff;
  overflow: hidden;
  border-radius: 20rpx;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 40rpx 30rpx;
  font-size: 26rpx;
  margin-bottom: 30rpx;
}
.list-top{
  overflow: hidden;
  margin-bottom: 30rpx;
}
.list-top-l{
  float: left;
}
.list-top-r{
  float: right;
  color: #ff3d17;
  font-size: 30rpx;
}
.list-top-l text{
  color: #242424;
  font-size: 30rpx;
  font-weight: bold;
}
.list-top-l image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 16rpx;
}
.con{
  margin-left:66rpx;
  border-top: 1px solid #ececec;
  padding-top: 26rpx;
  overflow: hidden;
  color: #242424;
  font-size: 28rpx;
  margin-bottom: 16rpx;
}
.con-l{
  float: left;
}
.con-r{
  float: right;
}
.label{
  color: #5b5b5b;
  margin-left:66rpx;
  margin-bottom: 30rpx;
}
.label text{
  border: 1px solid #d6d6d6;
  margin-right: 20rpx;
  border-radius: 30rpx;
  padding: 4rpx 20rpx;
}
.time{
  margin-left:66rpx;
  color: #5b5b5b;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}
.btn{
  overflow: hidden;
  float: right;
}
.btn view{
  float: left;
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 20rpx;
  text-align: center;
  border-radius: 30rpx;
}
.cancel{
  border: 1px solid #d6d6d6;
  color: #777;
}
.pay{
  background-image: linear-gradient(to right , #07e8e0, #1eb1f4);
  color: #fff;
}